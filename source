package calculator;

import java.util.Scanner;

public class Calculator {

    public static void main(String[] args) {
        Scanner values = new Scanner(System.in);
        double fnum, snum, answer;
        int operation;
        System.out.println("Enter the first number.\n");
        fnum = values.nextDouble();
        System.out.println("Enter the second number.\n");
        snum = values.nextDouble();
        System.out.println("Press the first letter of the operation to be performed\n1 for addition\n2 for subtraction\n3 for multiplication\n4 for division");
        operation = values.nextInt();
        switch(operation){
            case 1 :
                answer = fnum + snum;
                System.out.println("Your answer is " + answer);
                break;
            case 2 :
                answer = fnum - snum;
                System.out.println("Your answer is " + answer);
                break;
            case 3 :
                answer = fnum*snum;
                System.out.println("Your answer is " + answer);
                break;
            case 4 :
                answer = fnum/snum;
                System.out.println("Your answer is " + answer);
                break;
            default : 
                System.out.println("There is some error Contact me at 7827594123");
        }
    
    }
}
